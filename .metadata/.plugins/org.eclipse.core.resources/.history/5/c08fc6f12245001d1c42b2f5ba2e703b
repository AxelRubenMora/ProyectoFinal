package ui;

import doll.Acount;
import Validaciones;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
public class AcountForm {
	
	private Scanner scan;
	private Acount cuenta;
	private List<Acount>ListCuentas;
	public AcountForm(Scanner scan) {
		super();
		this.scan=scan;
		
	}
	public AcountForm(Acount cuenta) {
		super();
		this.cuenta=cuenta;
	}
	
	public AcountForm(List<Acount>ListCuentas) {
		super();
		this.ListCuentas=ListCuentas;
	}
	
	public Acount crearCuenta() {
		//crea un objeto de tipo acount
		Acount cuenta= new Acount();
		//introducimos los datos de la cuenta
		System.out.println("Porfavor Digite Su primer nombre: ");
		cuenta.setFirstName(scan.nextLine());
		System.out.println("Porfavor Digite Su Segundo nombre: ");
		cuenta.setMidleName(scan.nextLine());
		System.out.println("Porfavor Digite Su primer apellido: ");
		cuenta.setFirstSourName(scan.nextLine());
		System.out.println("Porfavor Digite Su Segundo apellido: ");
		cuenta.setSecondSurName(scan.nextLine());
		cuenta.setTitular();
		cuenta.setNumberAcount();
		return cuenta;
	}
	
	public void vercuenta() {
		System.out.printf("Titular: %s",this.cuenta.getTitular());
		System.out.printf("No. ceunta: %s",this.cuenta.getNumberAcount());
	}
	
	public void verUsuarios() {
		//bucle for que recorre los elementos del arreglo
		for(int i=0;i<ListCuentas.size();i++) {
			//imprime el numero de cuenta + el titular de la cuenta
			System.out.printf("%d | %s | s% | s%\n",i+1,ListCuentas.get(i).getTitular(),ListCuentas.get(i).getNumberAcount(),ListCuentas.get(i).getSaldo());
			System.out.println("\n");
		}
	}
	
public void eliminar() {
	int num=0;
	for(Acount i : ListCuentas) {
		System.out.println(num+"). "+i.getNumberAcount()+" "+i.getTitular());
		num++;
		}
	System.out.println("\nDigite el numero de cuenta de la cuenta que desea eliminar:\n");
	int numelim=scan.nextInt();
	try {
		ListCuentas.remove(numelim);
	}
	catch(Exception e) {
		System.out.println("numero fuera de rango\n");
	}
		
	}

public void editar() {
	int num=0;
	String opc;
	for(Acount i : ListCuentas) {
		System.out.println(num+"). "+i.getNumberAcount()+" "+i.getTitular());
		num++;
		}
	System.out.println("\nDigite la cuenta que desea:\n");
	opc=scan.next();
	int numelim=val.validarInt(opc);
	scan.nextLine();
	try {
		System.out.println("Porfavor Digite Su primer nombre: ");
		ListCuentas.get(numelim).setFirstName(scan.nextLine());
		System.out.println("Porfavor Digite Su Segundo nombre: ");
		ListCuentas.get(numelim).setMidleName(scan.nextLine());
		System.out.println("Porfavor Digite Su primer apellido: ");
		ListCuentas.get(numelim).setFirstSourName(scan.nextLine());
		System.out.println("Porfavor Digite Su Segundo apellido: ");
		ListCuentas.get(numelim).setSecondSurName(scan.nextLine());
		ListCuentas.get(numelim).setTitular();
	}
	catch(Exception e) {
		System.out.println("numero fuera de rango\n");
	}
	
	}

}

